@using Commerce.ViewModels;
@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Users";
}

<div class="d-flex" style="width:100%;">
    <form asp-action="search" class="d-flex mt-4 mb-4" style="margin-left:auto;margin-right:auto;">
        <input type="search" name="searchKey" placeholder="Search For User..." class="btn-search" style="width:600px;text-align:center;"/>
        <button type="submit" class="btn btn-primary" style="margin-left:-40px;border-radius:0px;width:100px"><i class="fa-solid fa-magnifying-glass"></i></button>
    </form>
</div>
<div class="container pt-4 px-4">

    <div class="articles" >
        <div class="container" style="
                    display: grid;
                    grid-template-columns: repeat(auto-fill,minmax(300px,1fr));
                    grid-gap: 20px;">
            @foreach (var item in Model)
            {
                <div>

                    <div class="box">
                        <h3>@item.UserName</h3>
                        <p>@item.Email</p>
                        <p>@item.PhoneNumber</p>
                        <p>@string.Join(" , ",item.Roles.ToList())</p>
                        <div class="info">
                            <p><a asp-action="Manage" asp-route-id="@item.Id" class="btn btn-primary">ManageUser</a></p>
                        </div>
                    </div>
            </div>
            }
        </div>
    </div>
</div>
